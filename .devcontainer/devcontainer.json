{
    "name": "Histotrip Dev Container",
    "dockerComposeFile": "compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "EditorConfig.EditorConfig",
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-debug",
                "bradlc.vscode-tailwindcss"
            ]
        }
    },
    "forwardPorts": [
        "dev:8000",
        "mailer:8025",
        "phpmyadmin:8081"
    ]
}
